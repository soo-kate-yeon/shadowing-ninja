{
  "$schema": "https://material.io/design-tokens",
  "name": "ShadowingNinja Design System",
  "version": "1.0.0",
  "description": "영어 쉐도잉 학습 서비스를 위한 Material Design 3 기반 디자인 토큰",
  
  "theme": {
    "colors": {
      "primary": {
        "50": "#fef7f2",
        "100": "#fef2e9",
        "200": "#fbe4d4",
        "300": "#f8d2b8",
        "400": "#f3a76c",
        "500": "#ed752a",
        "600": "#d46623",
        "700": "#a85119",
        "800": "#7f3d13",
        "900": "#562a0e",
        "950": "#2d1507"
      },
      "secondary": {
        "50": "#f9f7f3",
        "100": "#f3f1eb",
        "200": "#ebe8e2",
        "300": "#e7e2d9",
        "400": "#d8d8d8",
        "500": "#b4a69e",
        "600": "#8a7a71",
        "700": "#6b5e56",
        "800": "#4a413b",
        "900": "#2c2c2c",
        "950": "#1e1e1e"
      },
      "surface": {
        "base": "#ebe8e2",
        "container": "#f9f7f3",
        "containerLow": "#f3f3f3",
        "containerHigh": "#ffffff",
        "overlay": "rgba(12, 12, 11, 0.3)",
        "overlayDark": "rgba(12, 12, 11, 0.5)"
      },
      "accent": {
        "yellow": "#ffe586",
        "yellowLight": "#fee500",
        "highlight": "#ecc845",
        "peach": "#f8e4d8"
      },
      "text": {
        "primary": "#000000",
        "secondary": "#767676",
        "tertiary": "#a6a6a6",
        "disabled": "#757575",
        "inverse": "#ffffff",
        "accent": "#ed752a"
      },
      "border": {
        "default": "rgba(180, 166, 158, 0.3)",
        "light": "#d8d8d8",
        "focus": "#ed752a"
      },
      "social": {
        "kakao": "#fee500",
        "kakaoText": "#3c1e1e",
        "naver": "#03c75a",
        "google": "#ffffff",
        "googleBorder": "#d8d8d8"
      },
      "semantic": {
        "success": "#22c55e",
        "warning": "#f59e0b",
        "error": "#ef4444",
        "info": "#3b82f6"
      },
      "neutral": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#e5e5e5",
        "300": "#d4d4d4",
        "400": "#a3a3a3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717",
        "950": "#0a0a0a"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": ["Pretendard", "system-ui", "sans-serif"],
        "secondary": ["Open Sans", "Noto Sans KR", "sans-serif"],
        "mono": ["JetBrains Mono", "monospace"]
      },
      "fontSize": {
        "xs": { "value": "0.75rem", "lineHeight": "1rem" },
        "sm": { "value": "0.875rem", "lineHeight": "1.25rem" },
        "base": { "value": "1rem", "lineHeight": "1.5rem" },
        "lg": { "value": "1.125rem", "lineHeight": "1.75rem" },
        "xl": { "value": "1.25rem", "lineHeight": "1.75rem" },
        "2xl": { "value": "1.375rem", "lineHeight": "1.75rem" },
        "3xl": { "value": "1.875rem", "lineHeight": "2.25rem" }
      },
      "semantic": {
        "displayLarge": {
          "fontSize": "30px",
          "fontWeight": "700",
          "lineHeight": "36px",
          "letterSpacing": "-0.75px"
        },
        "titleLarge": {
          "fontSize": "22px",
          "fontWeight": "600",
          "lineHeight": "28px",
          "letterSpacing": "-0.22px"
        },
        "titleMedium": {
          "fontSize": "18px",
          "fontWeight": "500",
          "lineHeight": "24px",
          "letterSpacing": "-0.18px"
        },
        "titleSmall": {
          "fontSize": "16px",
          "fontWeight": "600",
          "lineHeight": "24px",
          "letterSpacing": "-0.16px"
        },
        "bodyLarge": {
          "fontSize": "16px",
          "fontWeight": "500",
          "lineHeight": "24px",
          "letterSpacing": "-0.16px"
        },
        "bodyMedium": {
          "fontSize": "14px",
          "fontWeight": "500",
          "lineHeight": "20px",
          "letterSpacing": "-0.14px"
        },
        "bodySmall": {
          "fontSize": "14px",
          "fontWeight": "400",
          "lineHeight": "20px",
          "letterSpacing": "-0.14px"
        },
        "labelLarge": {
          "fontSize": "14px",
          "fontWeight": "500",
          "lineHeight": "20px"
        },
        "labelMedium": {
          "fontSize": "12px",
          "fontWeight": "500",
          "lineHeight": "16px"
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": "400",
          "lineHeight": "16px"
        }
      },
      "fontWeight": {
        "regular": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      }
    },

    "spacing": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem"
    },

    "borderRadius": {
      "none": "0",
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "0.75rem",
      "lg": "1rem",
      "xl": "1.5rem",
      "2xl": "2rem",
      "full": "9999px"
    },

    "cornerRadius": {
      "small": "8px",
      "medium": "12px",
      "large": "16px",
      "extraLarge": "24px",
      "full": "1000px"
    },

    "shadows": {
      "none": "none",
      "sm": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "glassmorphism": "backdrop-blur(3px) backdrop-filter"
    },

    "breakpoints": {
      "mobile": { "max": "1099px" },
      "tablet": "1100px",
      "desktop": "1440px"
    },

    "motion": {
      "duration": {
        "instant": "0ms",
        "fast": "150ms",
        "normal": "200ms",
        "slow": "300ms",
        "slower": "500ms"
      },
      "easing": {
        "standard": "cubic-bezier(0.4, 0, 0.2, 1)",
        "emphasized": "cubic-bezier(0.2, 0, 0, 1)",
        "emphasizedDecelerate": "cubic-bezier(0.05, 0.7, 0.1, 1)",
        "emphasizedAccelerate": "cubic-bezier(0.3, 0, 0.8, 0.15)"
      }
    },

    "layout": {
      "container": {
        "maxWidth": "1440px",
        "padding": "32px"
      },
      "sidebar": {
        "width": "326px"
      },
      "contentPanel": {
        "minWidth": "676px"
      },
      "gap": {
        "section": "24px",
        "item": "16px",
        "inline": "12px"
      }
    }
  },

  "components": {
    "button": {
      "primary": {
        "background": "#ed752a",
        "color": "#ffffff",
        "borderRadius": "12px",
        "padding": "8px 16px"
      },
      "secondary": {
        "background": "#f1ede5",
        "color": "#ed752a",
        "borderRadius": "12px",
        "padding": "8px 16px"
      },
      "social": {
        "height": "56px",
        "borderRadius": "16px"
      }
    },
    "tag": {
      "active": {
        "background": "#2c2c2c",
        "color": "#f9f7f3"
      },
      "inactive": {
        "background": "#f9f7f3",
        "color": "#757575"
      },
      "selected": {
        "background": "#f9f7f3",
        "color": "#ed752a",
        "border": "1px solid #ed752a"
      },
      "borderRadius": "8px",
      "padding": "8px 12px"
    },
    "card": {
      "background": "#f9f7f3",
      "borderRadius": "16px",
      "padding": "24px"
    },
    "input": {
      "background": "#f9f7f3",
      "borderRadius": "12px",
      "border": "1px solid rgba(180, 166, 158, 0.3)",
      "padding": "12px 16px"
    },
    "videoPlayer": {
      "controlBackground": "rgba(12, 12, 11, 0.3)",
      "controlBorderRadius": "1000px",
      "controlPadding": "12px 16px"
    },
    "progressBar": {
      "height": "4px",
      "background": "#d8d8d8",
      "fillColor": "#000000"
    },
    "highlight": {
      "background": "#ffe586",
      "indicatorColor": "#ecc845"
    },
    "navigation": {
      "height": "80px",
      "background": "#e7e2d9"
    }
  }
}
